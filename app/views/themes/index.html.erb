<main>
	<div class="wrapper">
        <h1>Listing Themes</h1>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Picture</th>
              <th>Color</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @themes.each do |theme| %>
              <tr>
                <td><%= theme.name %></td>
                <td><%= image_tag theme.picture.url(:thumb) %></td>
                <td><%= theme.color %></td>
                <td><%= link_to 'Show', theme %></td>
                <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
                <td><%= link_to 'Destroy', { action: :destroy, id: theme.id }, method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
    </div>
</main>
