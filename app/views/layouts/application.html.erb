<!DOCTYPE html>
<html>
    <head>
        <title>Spinkop<%= ' - ' + yield(:title) if content_for?(:title) %></title>
        <%= current_stylesheet %>
        <%= csrf_meta_tags %>
    </head>
    <body>

        <% if notice != nil %>
            <div class="notice wrapper">
                <p><%= notice %></p>
            </div>
        <% end %>

        <%= yield %>

        <%= javascript_include_tag 'application.js', 'data-turbolinks-track' => true %>
        <%= current_javascript %>

    </body>
</html>
